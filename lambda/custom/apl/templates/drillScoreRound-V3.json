{
    "type": "APL",
    "version": "1.1",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "items": [
            {
                "type": "Frame",
                "height": "100vh",
                "width": "100vw",
                "backgroundColor": "#58ACFA",
                "items": [
                    {
                        "when": "${@viewportProfile == @hubRoundSmall}",
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "AlexaBackground",
                                "backgroundImageSource": "https://circle-of-fifths.s3-eu-west-1.amazonaws.com/cof2.png",
                                "coverOverlay": true
                            },
                            {
                                "type": "AlexaHeader",
                                "headerBackButton": false,
                                "headerBackgroundColor": "transparent",
                                "headerAttributionText": "Attribution",
                                "headerAttributionImage": "https://d2o906d8ln7ui1.cloudfront.net/images/cheeseskillicon.png"
                            },
                            {
                                "type": "Text",
                                "textAlign": "center",
                                "color": "#9900ff",
                                "fontFamily": "serif, times new roman, times, georgia",
                                "text": "Level 2",
                                "fontWeight": "600",
                                "top": "60"
                            },
                            {
                                "type": "Text",
                                "textAlign": "center",
                                "color": "#9900ff",
                                "fontFamily": "serif, times new roman, times, georgia",
                                "text": "Question 5",
                                "top": "80"
                            },
                            {
                                "type": "Text",
                                "textAlign": "center",
                                "color": "#9900ff",
                                "fontFamily": "serif, times new roman, times, georgia",
                                "text": "x out of y",
                                "top": "90"
                            },
                            {
                                "type": "Image",
                                "width": "70vw",
                                "height": "71vh",
                                "source": "https://circle-of-fifths.s3-eu-west-1.amazonaws.com/button-blank-3d85c6.png",
                                "alignSelf": "center",
                                "position": "absolute"
                            },
                            {
                                "type": "Text",
                                "textAlign": "center",
                                "fontStyle": "italic",
                                "fontSize": "6vw",
                                "text": "Order of sharps & flats",
                                "fontWeight": "900",
                                "position": "absolute",
                                "left": "12vw",
                                "top": "32vh",
                                "right": "12vw"
                            }
                        ]
                    },
                    {
                        "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "Text",
                                "fontSize": "6vw",
                                "text": "Hello World!!",
                                "fontWeight": "900",
                                "position": "absolute",
                                "left": "5vh",
                                "top": "2vh"
                            },
                            {
                                "type": "Image",
                                "source": "https://dl.dropbox.com/s/ws3p9ckm2voekdl/helloWorld.png?dl=0",
                                "height": "90vh",
                                "width": "100vw",
                                "position": "absolute",
                                "left": "35vh",
                                "top": "12vh"
                            },
                            {
                                "type": "Text",
                                "text": "Here is some text used just on larger screens and there is more room to play with!",
                                "position": "absolute",
                                "left": "5vh",
                                "right": "55vw",
                                "top": "15vh",
                                "fontSize": "5vw"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}